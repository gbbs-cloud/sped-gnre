{
    "name": "nfephp-org/sped-gnre",
    "description": "API para a emissÃ£o de guias GNRE para a SEFAZ",
    "license": ["GPL-3.0-or-later", "MIT"],
    "require": {
        "php": ">=8.1.0",
        "ext-dom": "*",
        "ext-gd": "*",
        "dompdf/dompdf": "^3",
        "laminas/laminas-barcode": "^2.3"
    },
    "scripts": {
        "test": "phpunit",
        "quality-checks": [
            "vendor/bin/rector process",
            "vendor/bin/phpcbf || true",
            "vendor/bin/phpcs || true",
            "vendor/bin/phpstan analyse --level 0 lib/ testes/"
        ]
    },
    "autoload": {
        "psr-4": {
            "Sped\\Gnre\\": "lib/Sped/Gnre/"
        },
        "exclude-from-classmap": [
            "exemplos/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Sped\\Gnre\\Test\\": "testes/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "^9.0",
        "rector/rector": "^2.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true
    }
}
